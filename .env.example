# Claude Flow Docker Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Anthropic API key for Claude Flow
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Project Configuration
PROJECT_NAME=myproject
PROJECT_PATH=.
NODE_ENV=development

# Package Manager (pnpm, yarn, or npm)
PACKAGE_MANAGER=pnpm

# Version Configuration
NODE_VERSION=22
CLAUDE_FLOW_VERSION=alpha
POSTGRES_VERSION=16
REDIS_VERSION=7

# Port Configuration
VITE_PORT=5173
PREVIEW_PORT=4173
CLAUDE_FLOW_PORT=3000
ALT_PORT_1=8080
ALT_PORT_2=3001

# Database Configuration (optional - use with 'docker compose --profile with-db up')
DB_USER=devuser
DB_PASSWORD=devpass
DB_NAME=devdb
DB_PORT=5432

# Redis Configuration (optional - use with 'docker compose --profile with-cache up')
REDIS_PORT=6379

# Resource Limits (optional)
CPU_LIMIT=2
MEMORY_LIMIT=4G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=512M

# User Configuration (match your host user for file permissions)
# Run 'id -u' and 'id -g' on your host to get these values
USER_UID=1001
USER_GID=1001

# Additional packages to install in container (space-separated)
# EXTRA_PACKAGES="vim htop"

# Custom environment variables
# CUSTOM_ENV_1=value1
# CUSTOM_ENV_2=value2